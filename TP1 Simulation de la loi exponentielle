# suivez l'algorithme que je vous ai donné
rcont=function(X,lambda)
{
n=length(X)
u=runif(n,0,1)
x=-log(u)/lambda
x
Plot(x,xlim=c(0,n),col="green",main=" simulation d'une loi exponentielle")
return(x)
}
X=rexp(100,5) # simule déjà un échatillon de la loi exponentielle à partir de cette commande existante dans R;
              # ce qui vous ai demandé c'est de vous même créer un code de simulation
Lambda=5
K=rexp(X,lambda)
K
Plot(K,type="o")
